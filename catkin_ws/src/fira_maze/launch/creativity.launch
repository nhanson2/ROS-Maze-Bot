<launch>
  <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>

  <!-- Launch Gazebo with world file  -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find fira_maze)/worlds/maze_4.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <arg name="node_start_delay" default="5.0" />  
  <node name="listener" pkg="roscpp_tutorials" type="listener" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' " />
  
  <!-- Initialize Robot 1 -->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find fira_maze)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 3 -y 1 -z 0" />
      <arg name="robot_name"  value="robot1" />
      <arg name="x_pos" default="-1.35"/>
      <arg name="y_pos" default="-1.05"/>
      <arg name="z_pos" default="0.0"/>
      <arg name="roll" default="0.0"/>
      <arg name="pitch" default="0.0"/>
      <arg name="yaw" default="1.5708"/>
      <arg name="number" default="1" />
    </include>
  </group>

  <!-- Initialize Robot 2 -->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find fira_maze)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x -4 -y 1 -z 0" />
      <arg name="robot_name"  value="robot2" />
      <arg name="x_pos" default="1.35"/>
      <arg name="y_pos" default="1.32"/>
      <arg name="z_pos" default="0.0"/>
      <arg name="roll" default="0.0"/>
      <arg name="pitch" default="0.0"/>
      <arg name="yaw" default="1.5708"/>
      <arg name="number" default="2" />
    </include>
  </group>
  
  <!-- Publish robot state to rviz -->

  <!-- Launch RViz with correct format -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find fira_maze)/rviz/part1.rviz" />

  <!-- Maze Explorer Controller -->
  <!-- node pkg="fira_maze" name="maze_explorer" type="maze_explorer_3.py" output="screen" -->

</launch>
